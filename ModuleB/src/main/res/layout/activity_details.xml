<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12sp"
    tools:context=".presentation.ui.DetailsActivity">

    <TextView
        android:id="@+id/universityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="University Name"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/universityState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="University State"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/universityCountry"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="University Country"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/CountryCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Country Code"
            android:textSize="17sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/webPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Web pages"
        android:textSize="17sp" />

    <Button
        android:id="@+id/BackButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="24sp"
        android:text="Back" />

</LinearLayout>